<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.curseschool">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CurseSchool">
        <activity android:name=".Notification.UserNotification"></activity>
        <activity android:name=".UserSettingsActivities.UserChangePassword" />
        <activity android:name=".UserSettingsActivities.UserChangePersonalData" />
        <activity android:name=".UserSettingsActivities.UserChangeEmail" />
        <activity android:name=".CourseView.EditCourseDatesForm" />
        <activity android:name=".CourseView.EditCourseForm" />
        <activity android:name=".CourseView.NewCourseMainForm" />
        <activity android:name=".CourseView.CourseFormView" />
        <activity android:name=".ScheduleView.CalendarView" />
        <activity android:name=".StudentGradesView.GradesStudentView" />
        <activity android:name=".StudentGradesView.GradesStudentCourseView" />
        <activity android:name=".TeacherGradesView.StudentGradesTeacherView" />
        <activity android:name=".TeacherGradesView.GradeCourseStudentsListView" />
        <activity android:name=".TeacherGradesView.GradeCourseTeacherView" />
        <activity
            android:name=".CourseView.CourseView"
            android:parentActivityName=".MainView.MainSite" />
        <activity android:name=".Dictionaries.GradeNameDictionary" />
        <activity android:name=".Dictionaries.CourseAdvancementDictionary" />
        <activity android:name=".Dictionaries.ClassRoomDictionary" />
        <activity android:name=".Dictionaries.CourseLanguagesDictionary" />
        <activity android:name=".Dictionaries.UsersSettings" />
        <activity android:name=".MainView.MainSite" />
        <activity android:name=".LoginActivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity.RegisterActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>