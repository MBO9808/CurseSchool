    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/mainappbar"/>

    <Button
        android:id="@+id/settingsUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Użytkownicy" />

    <Button
        android:id="@+id/settingsCourseLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Słownik języków kursów" />

    <Button
        android:id="@+id/settingsClassRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Słownik sal zajęć" />
</LinearLayout>